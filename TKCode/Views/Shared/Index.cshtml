        function LoadHtml(divRom, plateName, typeName, c) {
            divRom.fadeToggle(0);
            $.post("/Article/ArticleHTMLList", { PlateName: plateName, TypeName: typeName, Page: 1, count: c }, function (d, s, x) {
                if (s == "success") {
                    divRom.append(d);
                }
                divRom.fadeToggle(1000);
            });
        }

        function LoadData(divTag, plateName, typeName,c) {
            var divRom = $("#" + divTag);
            divRom.empty();
            divRom.fadeToggle(0);
            $.post("/Article/ArticleHTMLList", { PlateName: plateName, TypeName: typeName, Page: 1, count: c }, function (d, s, x) {
