@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.WacthUser.UserNickName</title>
    <link href="~/Content/Css/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/Css/font-awesome.css" />
    <style>
        html ::-webkit-srollbar-track-piece {
            background: none;
            -webkit-border-radius: 0;
        }

        html ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        html ::-webkit-scrollbar-thumb:vertical {
            height: 50px;
            background-color: #bbbbbb;
            -webkit-border-radius: 4px;
            outline: 0px solid #ffffff;
            ouline-offset: -2px;
            border: 2px solid #ffffff;
        }

        html ::-webkit-scrollbar-thumb:hover {
            height: 50px;
            background-color: #999999;
            -webkit-border-radius: 4px;
        }

        html ::-webkit-scrollbar-thumb:horizontal {
            width: 50px;
            background-color: #bbbbbb;
            -webkit-border-radius: 4px;
            outline: 0px solid #ffffff;
            ouline-offset: -2px;
            border: 2px solid #ffffff;
        }

        body {
            font-family: 'Avenir Next', Avenir, 'Helvetica Neue', Helvetica, 'Lantinghei SC', 'Hiragino Sans GB', 'Microsoft YaHei', "微软雅黑", STHeiti, 'WenQuanYi Micro Hei', SimSun, sans-serif;
            margin: 0px;
            padding: 0px;
            background-color: #E1EDF7;
        }

        #Head {
            height: 200px;
            width: 100%;
            background: #66FFCC;
            border-bottom: solid 1px #D8D8D8;
        }

            #Head .HeadImage {
                position: absolute;
                width: 100px;
                height: 100px;
                left: calc(50% - 50px);
                top: 20px;
            }

                #Head .HeadImage img {
                    border-radius: 50%;
                }

            #Head .UserName {
                position: absolute;
                width: 100%;
                text-align: center;
                font-size: x-large;
                top: 130px;
            }

            #Head .UserMail {
                position: absolute;
                width: 100%;
                text-align: center;
                top: 165px;
            }

                #Head .UserMail a {
                    text-decoration: none;
                    color: #775858;
                }

        #Content {
            margin-top: 10px;
        }

            #Content .Type {
                display: inline-block;
                width: calc(60% - 20px);
                margin: 0px 5px 0px 10px;
                background-color: white;
                border-radius: 5px;
                min-height: 430px;
                border: solid 1px #D8D8D8;
                vertical-align: top;
            }

            #Content .New {
                display: inline-block;
                width: calc(40% - 20px);
                margin: 0px 10px 0px 5px;
                border: solid 1px #D8D8D8;
                border-radius: 5px;
                min-height: 430px;
                background-color: white;
                vertical-align: top;
            }

            #Content a {
                text-decoration: none;
                color: #958ADA;
            }

                #Content a:hover {
                    color: red;
                }

            #Content .Title {
                padding-left: 10px;
                font-size: large;
                border-bottom: solid 1px #D8D8D8;
            }

            #Content .New_Content {
                font-size: small;
            }

                #Content .New_Content .NewItem {
                    margin: 2px;
                    border-bottom: dashed 1px #D8D8D8;
                    margin-top: 3px;
                    padding: 2px 3px 5px 3px;
                }

                    #Content .New_Content .NewItem .Message {
                    }

                    #Content .New_Content .NewItem .Description {
                        color: #B38B8B;
                        font-size: x-small;
                        margin: 3px 0px 0px 3px;
                    }

        .TabItem {
            border-bottom: dashed 1px #D8D8D8;
            padding: 10px;
            min-height: 40px;
        }

            .TabItem .ItemTitle {
                font-size: large;
            }

            .TabItem .Description {
                font-size: smaller;
                color: #B38B8B;
            }

            .TabItem .Message {
                margin-top: 8px;
            }
             .TabItem .Tools {
                 visibility:hidden
            }

            .TabItem .TitleRom:hover .Tools{
                 visibility:visible
              
            }

    </style>
</head>
<body>
