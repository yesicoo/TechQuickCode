@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: 'Avenir Next', Avenir, 'Helvetica Neue', Helvetica, 'Lantinghei SC', 'Hiragino Sans GB', 'Microsoft YaHei', "微软雅黑", STHeiti, 'WenQuanYi Micro Hei', SimSun, sans-serif;
            margin: 0px;
            padding: 0px;
        }

        #Head {
            height: 200px;
            width: 100%;
              background: #66FFCC;
        }

            #Head .HeadImage {
                position:absolute;
                width: 100px;
                height: 100px;
                left: calc(50% - 50px);
                top:20px;
            }

                #Head .HeadImage img {
                    border-radius: 50%;
                }

            #Head .UserName {
                 position:absolute;
                  width: 100%;
                text-align: center;
                font-size: x-large;
                top:130px;
            }
    </style>
</head>
<body>
    <div id="Head">
        <div class="HeadImage">
            <img src="~/Content/Image/teemo.jpg" width="100%" height="100%" />
        </div>
        <div class="UserName">
            <span>徐清</span>
        </div>
    </div>
    <script src="~/Content/Scripts/jquery-1.8.3.min.js"></script>
    <script src="~/Content/Scripts/jquery.particleground.min.js"></script>
    <script>
        $('#Head').particleground({
            dotColor: '#ffffff',
            lineColor: '#ffffff'
        });
    </script>
</body>
</html>
