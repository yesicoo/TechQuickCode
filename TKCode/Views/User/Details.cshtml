    </div>
    <script src="~/Content/Scripts/jquery-1.8.3.min.js"></script>
    <script src="~/Content/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/Scripts/jquery.particleground.min.js"></script>
    <script>
        $('#Head').particleground({
            dotColor: '#ffffff',
            lineColor: '#ffffff'
        });
        var PlateName = "All";
        var DataID = "All";
        $.get("/User/GetTypes/@ViewBag.WacthUser.GUID", function (d, s, x) {
            if (s == "success") {
                var jd = JSON.parse(d);
                for (var i = 0; i < jd.length; i++) {
                    var item = jd[i];
                    var li_node = document.createElement("li");
                    li_node.innerHTML = "<a id='A_" + i + "' href='#ActiveList_" + i + "' DataID='" + i + "' PlateName='" + item.ArticlePlate + "' >" + item.ArticlePlate + "(" + item.Count + ")</a>";
                    $("#myTab").append(li_node);
                    var div_node = document.createElement("div");
                    div_node.className = "tab-pane fade";
                    div_node.setAttribute("page", 1);
                    div_node.id = "ActiveList_" + i;
                    $("#TypePane").append(div_node);
                }
                $('#myTab a').click(function (e) {
                    e.preventDefault();
                    $(this).tab('show');
                    PlateName = e.target.attributes["PlateName"].value;
                    DataID = e.target.attributes["DataID"].value;
                    if ($("#ActiveList_" + DataID).children("div").length == 0) {
                        LoadArticle();
                    }
                });
                $('#myTab a:first').trigger("click");
            }

        });



    </script>
    @{if (ViewBag.IsOwn)
    {
        <script>
            function LoadArticle() {
                var Div_Article = $('#ActiveList_' + DataID);
                var page = parseInt(Div_Article.attr("page"));

                $.post("/Article/ArticleItemListByPlateForUser", { PlateName: PlateName, Page: page, Token: "@ViewBag.WacthUser.GUID" }, function (d, s, x) {
                    if (s == "success") {
                        var jds = JSON.parse(d);
                        var html = "";
                        for (var i = 0; i < jds.length; i++) {
                            var jd = jds[i];
                            html = html + '<div class="TabItem"> <div  class="TitleRom"> <div class="pull-left"><a class="ItemTitle" href="/Article/Details/' + jd.GUID + '" target="_blank">' + jd.ArticleTitle + '</a> <span class="Tools"> &nbsp; <a onclick="EditArticle(\'' + jd.GUID + '\')"><i class="fa fa-edit"></i></a> &nbsp; <a onclick="DeleteArticle(\'' + jd.GUID + '\')"><i class="fa fa-trash-o"></i></a> </span></div><div class="pull-right Message"> <a >' + jd.ArticlePlate + '</a>&nbsp;/&nbsp;<a >' + jd.ArticleType + '</a> &nbsp;&nbsp;<span>' + jd.CreateTime + '</span> </div> <div style="clear:both"></div></div> <div class="Description"> <span>' + jd.ArticleDescription + '</span> </div></div>';
                        }
                        Div_Article.append(html);
                    }
                });
                Div_Article.attr("page", page + 1);
            }
            function EditArticle(id) {
              
                location.href = "/Article/Edit/" + id;
            }
            function DeleteArticle(e) {
                alert(e);
            }
        </script>
        
    }
    else
    {
        <script>
            function LoadArticle() {
                var Div_Article = $('#ActiveList_' + DataID);
                var page = parseInt(Div_Article.attr("page"));

                $.post("/Article/ArticleItemListByPlateForUser", { PlateName: PlateName, Page: page, Token: "@ViewBag.WacthUser.GUID" }, function (d, s, x) {
                    if (s == "success") {
                        var jds = JSON.parse(d);
                        var html = "";
                        for (var i = 0; i < jds.length; i++) {
                            var jd = jds[i];
